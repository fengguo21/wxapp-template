.page-register {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.logo {
    width: 100rpx;
    height: 100rpx;
    margin-top: 80rpx;
}

.title {
    letter-spacing: 1px;
    line-height: 1.5em;
    font-size: 17px;
}

.desc {
    letter-spacing: 1px;
    line-height: 1.5em;
    font-size: 12px;
    color: #888;
}

/* 自定义按钮样式 */
button::after {
    background-color: transparent;
    border: none;
    outline-color: transparent;
    box-shadow: transparent;
}

button {
    padding: 0;
    margin: 0;
    color: #fff;
    background-color: #f33;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

button.button-hover {
    background-color: red !important;
    color: #fff !important;
}

button.getuserinfo {
    width: 500rpx;
    margin-top: 100rpx;
}

button.getuserinfo image {
    width: 50rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

button.contact {
    background-color: #fff;
    position: absolute;
    bottom: 0;
    left: 275rpx;
    width: 200rpx;
    font-size: 11px;
    color: #509fc9;
}
